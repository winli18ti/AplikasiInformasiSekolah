<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_guest_berita"
    tools:context=".GuestBeritaFragment">

    <TextView
        android:id="@+id/txt_guest_berita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-medium"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:layout_margin="10dp"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Spinner
        android:id="@+id/spinner_berita_sekolah"
        android:layout_width="277dp"
        android:layout_height="45dp"
        android:layout_marginTop="18dp"
        android:layout_marginStart="15dp"
        android:layout_weight="0.5"
        android:spinnerMode="dropdown"
        android:textAlignment="viewStart"
        android:backgroundTint="@color/birutua"
        android:background="@drawable/spinner_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_guest_berita" />

    <ImageButton
        android:id="@+id/btn_cari_berita"
        android:layout_width="99dp"
        android:layout_height="60dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0.5"
        android:backgroundTint="@android:color/white"
        app:layout_constraintStart_toEndOf="@id/spinner_berita_sekolah"
        app:layout_constraintTop_toBottomOf="@id/txt_guest_berita"
        app:srcCompat="@drawable/ic_cari" />

    <ListView
        android:id="@+id/list_berita_guest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_berita_sekolah"/>

</androidx.constraintlayout.widget.ConstraintLayout>