<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GuestSekolahFragment">

    <TextView
        android:id="@+id/txt_guest_sekolah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/guest_sekolah"
        android:layout_margin="10dp"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/edt_cari_sekolah"
        android:layout_width="280dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:layout_weight="0.5"
        android:background="@android:color/black"
        android:textColor="#FFF"
        android:hint="Nama Sekolah"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@id/txt_guest_sekolah"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btn_cari_sekolah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="8dp"
        android:layout_weight="0.5"
        android:backgroundTint="#000"
        android:text="Cari Sekolah"
        android:textColor="#FFF"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/txt_guest_sekolah"
        app:layout_constraintStart_toEndOf="@id/edt_cari_sekolah"/>

    <ListView
        android:id="@+id/list_sekolah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_cari_sekolah"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>