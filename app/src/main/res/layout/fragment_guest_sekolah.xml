<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_guest_sekolah"
    tools:context=".GuestSekolahFragment">


    <TextView
        android:id="@+id/txt_guest_sekolah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed-medium"
        android:text=""
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:layout_marginTop="15dp"
        android:layout_margin="10dp"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <EditText
        android:id="@+id/edt_cari_sekolah"
        android:layout_width="277dp"
        android:layout_height="45dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="40dp"
        android:layout_weight="0.5"
        android:background="@drawable/edit_background_guest"
        android:inputType="text"
        android:hint=" Cari Sekolah .... "
        android:textColorHint="@android:color/black"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_guest_sekolah" />

    <ImageButton
        android:id="@+id/btn_cari_sekolah"
        android:layout_width="99dp"
        android:layout_height="60dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="35dp"
        android:layout_weight="0.5"
        android:backgroundTint="@android:color/white"
        app:layout_constraintStart_toEndOf="@id/edt_cari_sekolah"
        app:layout_constraintTop_toBottomOf="@id/txt_guest_sekolah"
        app:srcCompat="@drawable/ic_cari" />

    <ListView
        android:id="@+id/list_sekolah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="5dp"
        android:paddingLeft="5dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_cari_sekolah"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>